docker run --name Abathur -p 3000:3000 -d python:2-slim /bin/sh -c "pip install flask; echo 'from flask import Flask' > main.py; echo 'app = Flask(__name__)' >> main.py; echo \"@app.route('/')\" >> main.py; echo 'def hello_world():' >> main.py; echo \"    return '<h1>Hello World</h1>'\" >> main.py; export FLASK_APP=main.py; flask run --host=0.0.0.0 --port=3000"
